<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:context="spevakov.ejournal.activity.AddGroup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Курс: " />

        <Spinner
            android:layout_margin="10dp"
            android:id="@+id/spinnerCourse"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:gravity="center"
            android:text="Группа: " />

        <EditText
            android:id="@+id/etGroup"
            android:inputType="textCapCharacters"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:gravity="center"
            android:text="Артикул: " />

        <EditText
            android:id="@+id/etGroupEng"
            android:textAlignment="center"
            android:inputType="textCapCharacters"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ 0123456789"
            android:imeActionLabel="Done"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

    </LinearLayout>


    <Button
    android:id="@+id/btnAddGroup"
    android:layout_height="60dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:background="@drawable/btn_yes"
    android:textColor="@color/colorButtonText"
    android:textStyle="bold"
    android:textSize="16sp"
    android:text="Добавить группу" />

    <Button
        android:id="@+id/btnCloseAG"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/btn_no"
        android:textColor="@color/colorButtonText"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Закрыть" />
</LinearLayout>
